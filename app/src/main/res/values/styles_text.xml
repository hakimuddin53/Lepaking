<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="Text.H5">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.H6">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Subtitle1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Subtitle2">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Body1.Grey" parent="Text.Body1">
        <item name="android:alpha">0.38</item>
    </style>

    <style name="Text.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body2.Grey" parent="Text.Body2">
        <item name="android:alpha">0.57</item>
    </style>

    <style name="Text.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Overline">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextTitleEditText" parent="Text.Body1">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="EditText" parent="Text.Body1">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_height_edittext</item>
        <item name="android:textColorHint">@color/grey400</item>
        <item name="android:background">@drawable/all_bg_edittext</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="TextValue">
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.87</item>
    </style>


    <style name="TextFooter">
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMedium.Black" parent="TextMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="EditTextBarcode" parent="TextMedium.Black">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_height_edittext</item>
        <item name="android:textColorHint">@color/grey400</item>
        <item name="android:background">@drawable/all_bg_edittext</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="EditTextNumberWithoutMaxLength" parent="Text.Body1">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/grey400</item>
        <item name="android:background">@drawable/all_bg_edittext</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textNoSuggestions|number</item>
    </style>

    <style name="EditTextNumber" parent="Text.Body1">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/grey400</item>
        <item name="android:background">@drawable/all_bg_edittext</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">7</item>
        <item name="android:inputType">textNoSuggestions|number</item>
    </style>


    <style name="EditTextNumberDecimal" parent="Text.Body1">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/grey400</item>
        <item name="android:background">@drawable/all_bg_edittext</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">7</item>
        <item name="android:inputType">textNoSuggestions|numberDecimal</item>
    </style>
</resources>